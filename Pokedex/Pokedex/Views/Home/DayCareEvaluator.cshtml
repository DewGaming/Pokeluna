@model Pokedex.Models.EggGroupEvaluatorViewModel;
@{
    Layout = "_Layout";
    ViewBag.Title = "Day Care Combinations";
    ViewBag.Description = "Find out what Pokémon can be placed in a day care to produce a Pokémon Egg!";
}

@section styles
{
    <link href="/css/eggGroup.css" rel="stylesheet" type="text/css" />
    <link href="/css/pageLookup.css" rel="stylesheet" type="text/css" />
}

@section scripts
{
    <script src="/js/dayCareEvaluator.js"></script>
}

<div>
    <div class="evaluator">
        <div class="flexDiv">
            <div class="breedablePokemonList">
                @Html.Label("Breedable Pokémon")
                @Html.DropDownList("Breedable Pokémon", new SelectList(@Model.AllPokemon, "Id", "Name"), "", new { @class = "form-control eggGroupSelectList" })
            </div>
        </div>
    </div>
    <div class="pokemonWithEggGroup"></div>
</div>