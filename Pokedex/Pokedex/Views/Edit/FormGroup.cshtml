@model Pokedex.DataAccess.Models.FormGroup

<h2>Update Form</h2>

<div class="form-horizontal">

    @using (Html.BeginForm())
    {    
        @Html.AntiForgeryToken()
            
        @Html.HiddenFor(x => x.Id)

        @Html.ValidationSummary()

        <div class="form-group row">
            @Html.LabelFor(x => x.Name, new { @class = "col-md-2" })
            @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @autocomplete = "off", @class = "form-control col-md-8" } })
            @Html.ValidationMessageFor(x => x.Name)
        </div>

        <div class="form-group row">
            @Html.LabelFor(x => x.AppearInTeamRandomizer, new { @class = "col-md-2" })
            @Html.EditorFor(x => x.AppearInTeamRandomizer, new { htmlAttributes = new { @autocomplete = "off", @class = "form-control col-md-8" } })
            @Html.ValidationMessageFor(x => x.AppearInTeamRandomizer)
        </div>

        <p>
            <button type="submit" class="btn btn-primary" role="button">Save</button>
        </p>
    }

</div>