@model Pokedex.Models.LoginViewModel

<h2>Login</h2>

<div class="form-horizontal">

    @using (Html.BeginForm())
    {
        <div class="form-group row">
            @Html.LabelFor(x => x.Username, new { @class = "col-md-2" })
            @Html.EditorFor(x => x.Username, new { htmlAttributes = new { @autocomplete = "off", @class = "form-control col-md-8" } })
            @Html.ValidationMessageFor(x => x.Username)
        </div>
        <div class="form-group row">
            @Html.LabelFor(x => x.Password, new { @class = "col-md-2" })
            @Html.PasswordFor(x => x.Password, new { @class = "form-control col-md-8" })
            @Html.ValidationMessageFor(x => x.Password)
        </div>

        @Html.ValidationSummary()

        <p>
            <button type="submit" class="btn btn-primary" role="button">Login</button>
            <a class="btn btn-primary" href="@(this.Url.Action("Register", "Account"))">Create new account</a>
        </p>
    }
    
</div>