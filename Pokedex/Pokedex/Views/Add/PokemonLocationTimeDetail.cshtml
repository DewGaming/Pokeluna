@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Pokedex.Models.PokemonLocationTimeDetailViewModel
@{
    Layout = "_layout";
}

<h2>Add Pokemon Availability Time Details</h2>

<div class="form-horizontal">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        @Html.ValidationSummary()

        <div class="form-group row">
            @Html.LabelFor(x => x.TimeId, new { @class = "col-md-2" })
            @Html.DropDownListFor(x => x.TimeId, new SelectList(Model.AllTimes, "Id", "Name"), "", new { @class = "form-control col-md-8" })
            @Html.ValidationMessageFor(x => x.TimeId)
        </div>

        <p>
            <button type="submit" class="btn btn-primary" role="button">Add</button>
            <a class="btn btn-primary" href="@(this.Url.Action("PokemonLocationDetails", "Admin", new { id = Model.LocationId }))">Skip</a>
        </p>
    }

</div>