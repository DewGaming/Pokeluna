@model Pokedex.Models.PokemonBaseHappinessViewModel

<h2>Add Base Happiness</h2>

<div class="form-horizontal">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        @Html.ValidationSummary()
        @Html.HiddenFor(x => x.PokemonId)
        @Html.HiddenFor(x => x.GenerationId)

        <div class="form-group row">
            @Html.LabelFor(x => x.BaseHappinessId, new { @class = "col-md-2" })
            @Html.DropDownListFor(x => x.BaseHappinessId, new SelectList(Model.AllBaseHappinesses, "Id", "Happiness"), new { @class = "form-control col-md-8" })
            @Html.ValidationMessageFor(x => x.BaseHappinessId)
        </div>

        <p>
            <button type="submit" class="btn btn-primary" role="button">Add</button>
        </p>
    }

</div>