@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Pokedex.Models.PokemonLocationWeatherDetailViewModel
@{
    Layout = "_layout";
}

<h2>Add Pokemon Availability Weather Details</h2>

<div class="form-horizontal">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        @Html.ValidationSummary()

        <div class="form-group row">
            @Html.LabelFor(x => x.WeatherId, new { @class = "col-md-2" })
            @Html.DropDownListFor(x => x.WeatherId, new SelectList(Model.AllWeathers, "Id", "Name"), "", new { @class = "form-control col-md-8" })
            @Html.ValidationMessageFor(x => x.WeatherId)
        </div>

        <p>
            <button type="submit" class="btn btn-primary" role="button">Add</button>
            <a class="btn btn-primary" href="@(this.Url.Action("PokemonLocationSeasonDetail", "Add", new { pokemonLocationDetailId = Model.PokemonLocationDetailId }))">Skip</a>
        </p>
    }

</div>