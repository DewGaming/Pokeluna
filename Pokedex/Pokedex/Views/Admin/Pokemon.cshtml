@model List<int>;
@{
    Layout = "_Layout";
}

@section styles
{
    <link href="/css/pageLookup.css" rel="stylesheet" type="text/css" />
}

@section scripts
{
    <script src="/js/pageLookup.js" type="text/javascript"></script>
    <script>
        $(document).ready(function() {
            $('.allPokemon').hide();
        });
    </script>
}

<p class="adminButtons">
    @if (this.User.IsInRole("Owner"))
    {
        <a class="btn btn-primary" href="@this.Url.Action("Pokemon", "Add")" role="button">Add Pokémon</a>
        <button class="btn btn-primary incompletePokemon" onclick="lookupIncompletePokemon()">View Incomplete Pokémon</button>
        <button class="btn btn-primary missingThreeD" onclick="lookupMissingThreeD()">View Pokémon Without Home Render</button>
        <button class="btn btn-primary missingShiny" onclick="lookupMissingShiny()">View Pokémon Without Shiny Artwork</button>
        <button class="btn btn-primary allPokemon" onclick="lookupAllPokemon()">View All Pokémon</button>
    }
</p>
<div class="pageButtons">
    @foreach (var id in Model)
    {
        <button id="Generation@(id)" onclick="lookupAdminGeneration('@id')">Generation @id</button>
    }
</div>
<div class="page generation pokemonList">
    <div class="grid-container"></div>
</div>