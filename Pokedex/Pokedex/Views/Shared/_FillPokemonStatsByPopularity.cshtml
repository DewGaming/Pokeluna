@model Pokedex.Models.PokemonPageStatsViewModel;

<h2>Stats by Popularity</h2>

<div class="grid-container">
    @foreach (var p in Model.PokemonList)
    {
        <div class="shadowed @p.Name@(p.IsComplete ? "" : " incomplete")">
            @if (p.Name.IndexOf(" (") > -1)
            {
                <a href="@this.Url.Action("PokemonWithId", "Home", new { pokemonName = p.Name.Substring(0, p.Name.IndexOf(" (")).Replace(": ", "_").Replace(' ', '_').ToLower(), pokemonId = @p.Id, generationId = @Model.Generation.Id })">
                    <img class="pokemonListPicture" title="@p.Name", src="@Url.Content(string.Concat(@Model.AppConfig.WebUrl, @Model.AppConfig.OfficialPokemonImageUrl, @p.Id, ".png"))">
                </a>
            }
            else
            {
                <a href="@this.Url.Action("PokemonWithId", "Home", new { pokemonName = p.Name.Replace(": ", "_").Replace(' ', '_').ToLower(), pokemonId = @p.Id, generationId = @Model.Generation.Id })">
                    <img class="pokemonListPicture" title="@p.Name", src="@Url.Content(string.Concat(@Model.AppConfig.WebUrl, @Model.AppConfig.OfficialPokemonImageUrl, @p.Id, ".png"))">
                </a>
            }
            <div class="description">
                <span class="pokemonName">#@p.PokedexNumber.ToString().PadLeft(4, '0') @p.Name</span>
                <br>
                <span class="pokemonName">Total Visits: @Model.PageStatList.Where(x => x.Name == p.Name).Count()</span>
            </div>
        </div>
    }
</div>