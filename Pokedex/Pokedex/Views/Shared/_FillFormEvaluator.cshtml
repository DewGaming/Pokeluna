@model Pokedex.Models.FormEvaluatorViewModel;

<div class="grid-container pokemonList">
    @for(var i = 0; i < Model.AllPokemon.Count(); i++)
    {
        <div class="shadowed @Model.AllPokemon[i].Name">
            <a href="@this.Url.Action("PokemonWithId", "Home", new { pokemonName = Model.AllPokemon[i].Name.ToLower(), pokemonId = @Model.AllPokemon[i].Id, generationId = @Model.GenerationId })">
                <img class="pokemonListPicture" loading="lazy" title="@(Model.AllPokemon[i].IsAltForm ? Model.AllPokemon[i].NameWithForm : Model.AllPokemon[i].Name)", src="@Url.Content(string.Concat(@Model.AppConfig.WebUrl, @Model.AppConfig.GridImageUrl, @Model.AllPokemon[i].Id, ".png"))">
            </a>
            <div>
                <a class="pokemonName" href="@this.Url.Action("PokemonWithId", "Home", new { pokemonName = @Model.AllPokemon[i].Name.ToLower(), pokemonId = @Model.AllPokemon[i].Id, generationId = @Model.GenerationId } )">@('#')@Model.AllPokemon[i].PokedexNumber.ToString().PadLeft(4, '0') @(Model.AllPokemon[i].IsAltForm ? Model.AllPokemon[i].NameWithForm : Model.AllPokemon[i].Name)</a>
            </div>
        </div>
    }
</div>