@model Pokedex.DataAccess.Models.RegionalDex

<h2>Delete Regional Dex Confirm</h2>

<div class="form-horizontal">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        @Html.HiddenFor(x => x.Id)

        <div class="form-group">
            @Html.LabelFor(x => x.Name, "Regional Dex's Name"):
            @Html.DisplayFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Game.Name, "Regional Dex's Game"):
            @Html.DisplayFor(x => x.Game.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <p>
            <button type="submit" class="btn btn-danger" role="button">Delete</button>
        </p>
    }

</div>