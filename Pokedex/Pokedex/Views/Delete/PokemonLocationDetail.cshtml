@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Pokedex.DataAccess.Models.PokemonLocationDetail
@{
    Layout = "_Layout";
}

<h2>Delete Pokemon Availability Confirm</h2>

<div class="form-horizontal">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        @Html.HiddenFor(x => x.Id)
        @Html.HiddenFor(x => x.LocationId)

        <div class="form-group">
            @Html.LabelFor(x => x.Pokemon.Name):
            @Html.DisplayFor(x => x.Pokemon.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.MinimumLevel):
            @Html.DisplayFor(x => x.MinimumLevel, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.MaximumLevel):
            @Html.DisplayFor(x => x.MaximumLevel, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.ChanceOfEncounter):
            @Html.DisplayFor(x => x.ChanceOfEncounter, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.CaptureMethod.Name):
            @Html.DisplayFor(x => x.CaptureMethod.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <p>
            <button type="submit" class="btn btn-danger" role="button">Delete</button>
        </p>
    }

</div>