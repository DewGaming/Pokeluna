@model Pokedex.DataAccess.Models.Message

<h2>Delete Message Confirm</h2>

<div class="form-horizontal">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        @Html.HiddenFor(x => x.Id)

        <div class="form-group">
            @Html.LabelFor(x => x.MessageTitle):
            @Html.DisplayFor(x => x.MessageTitle, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.MessageContent):
            @Html.DisplayFor(x => x.MessageContent, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <p>
            <button type="submit" class="btn btn-danger" role="button">Delete</button>
        </p>
    }

</div>