@model IEnumerable<Pokedex.DataAccess.Models.HuntingMethod>;

<div class="natureTable">
    @if (this.User.IsInRole("Owner"))
    {
        <p>
            <a class="btn btn-primary" href="@this.Url.Action("HuntingMethod", "Add")" role="button">Add Hunting Method</a>
        </p>
    }
    <table class="table">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Actions</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    <a href="@(this.Url.Action("HuntingMethod", "Edit", new { id = item.Id }))">Edit</a>
                    @('|')
                    <a href="@(this.Url.Action("HuntingMethodGameDetail", "Edit", new { huntingMethodId = item.Id }))">Edit Game's Possible In</a>
                    @('|')
                    <a href="@(this.Url.Action("HuntingMethod", "Delete", new { id = item.Id }))">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>